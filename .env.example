# Your Polygon wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Polymarket Proxy Wallet Address (from polymarket.com/settings)
# Leave empty if using EOA wallet directly
FUNDER_ADDRESS=

# Trading configuration
# Minimum price to buy (in cents, e.g., 50 = 0.50 USDC)
MAX_BUY_PRICE=50

# Profit target (in cents, e.g., 2 = 0.02 USDC)
PROFIT_TARGET=2

# Maximum position size per trade (in shares)
MAX_POSITION_SIZE=100

# Polling interval in milliseconds
POLL_INTERVAL_MS=1000

# Enable paper trading mode (no real trades)
PAPER_TRADING=true

# === 風控配置 ===

# 最大允許滑點 (分)
MAX_SLIPPAGE_CENTS=1

# 最小訂單簿深度 (股數)
MIN_ORDERBOOK_DEPTH=50

# 開盤前強制清倉時間 (毫秒, 60000 = 60秒)
# SELL_BEFORE_START_MS=60000

# 最小交易時間窗口 (毫秒, 30000 = 30秒)
# MIN_TIME_TO_TRADE_MS=30000

# 止損點 (分)
STOP_LOSS=5

# === AI 分析配置 ===

# 啟用規則式 AI 分析 (true/false)
AI_ENABLED=true

# AI 最低評分門檻
AI_MIN_SCORE=10

# AI 最低信心度門檻 (%)
AI_MIN_CONFIDENCE=40

# AI 模式下最小倉位
AI_MIN_POSITION_SIZE=20

# === OpenAI LLM 配置 ===

# OpenAI API Key (從 https://platform.openai.com/api-keys 獲取)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI 模型 (gpt-4o, gpt-4o-mini, gpt-4-turbo)
OPENAI_MODEL=gpt-4o-mini

# 啟用 LLM 分析 (true/false) - 需要 OPENAI_API_KEY
LLM_ENABLED=true
